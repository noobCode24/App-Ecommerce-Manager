<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.App_Ecommerce" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="Theme.App_Ecommerce" parent="Base.Theme.App_Ecommerce" />
    <style name="textStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textStyleBold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="neumorphismcard">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">20dp</item>
        <item name="neumorph_backgroundColor">@color/background_color</item>

        <!-- Thêm bóng đổ -->
        <item name="neumorph_shadowColorLight">@drawable/shadow_gradient</item>
        <item name="neumorph_shadowColorDark">@drawable/shadow_gradient</item>
        <item name="neumorph_shadowElevation">8dp</item>
    </style>
</resources>